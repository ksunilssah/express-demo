<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">Account Register</h3>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" value="{{name}}" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input name="email" value="{{email}}" type="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">password</label>
                    <input name="password" value="{{password}}" type="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="confirmpassword">password</label>
                    <input name="confirmpassword" value="{{confirmpassword}}" type="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary"> Submit</button>
            </form>
        </div>
    </div>
</div>